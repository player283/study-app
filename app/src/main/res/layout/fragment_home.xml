<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/study_with">

    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Study With Me!"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:fontFamily="@font/no4"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find out your story below"
        android:fontFamily="@font/no4"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_black"
            android:text="Go to Social"
            android:textSize="23sp"
            android:textColor="#132EC5"
            android:fontFamily="@font/no4"
            android:textStyle="bold"
            android:id="@+id/goDiary" />

    </RelativeLayout>
</LinearLayout>
